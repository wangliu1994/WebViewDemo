<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.DarkStatusBar" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@android:color/white</item>
        <!--<item name="android:fitsSystemWindows">true</item>-->
    </style>

    <style name="AppTheme.AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--如果页面主题中使用了fitsSystemWindows 属性，那么AlertDialog只有使用指定主题，在主题中将fitsSystemWindows置为false, 否则弹窗样式会有问题-->
        <!--<item name="android:fitsSystemWindows">false</item>-->
    </style>

</resources>
